class RunImageCapture extends Thread {
	
	JFrame jframe = new JFrame();
	JPanel jpanel = new JPanel(); 
	
	Dimension screenSize =  Toolkit.getDefaultToolkit().getScreenSize();
	double w = screenSize.getWidth();
	double h = screenSize.getHeight();
	     
	int nw = (int) ((w * .5) - 50);
	int nh = (int) ((h * .5) - 50);
	 
	int widthOfCapture = 500;
	int heightOfCapture = 500;
	
	Rectangle rect3 = new Rectangle(nw, nh, widthOfCapture, heightOfCapture);
	
	boolean running = true;
	int runtimes = 0;
	
	public void run() {
        Start();
    }
	
	public void Start() {
		
		while(running) 
		{
			try {
			    Thread.sleep(500);      //1000 milliseconds is one second.     
			    DisplayImage();
			} catch(InterruptedException ex) {
			    Thread.currentThread().interrupt();
			}
		}
		
	}
	
	public void DisplayImage() {
		
		jpanel.removeAll();
		jframe.getContentPane().removeAll();
		
			runtimes++;
			Robot bot2 = null;
			
			try {
				bot2 = new Robot();
			} catch (AWTException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		
			
			
		 BufferedImage newImage2 = bot2.createScreenCapture(rect3);
		

		 PointerInfo a = MouseInfo.getPointerInfo();
		 Point b = a.getLocation();
		 
		 int pointerx = 0;
		 int pointery = 0;
		 
		 System.out.println("Width="+nw+" Height="+nh);
		
		 
		 if(b.x > nw + 10 && b.x < nw + 300 - 10)
		 {
			 pointerx = b.x - nw;
			 
			
		 }else {
			 pointerx = 0;
		 }
		 
		 if(b.y > nh + 10 && b.y < nh + 100 - 10)
		 {
			 
			 pointery = b.y - nh;
			 
		 }else 
		 {
			 pointery = 0;
		 }
		 
		 
		 System.out.println("X="+b.x+" Y="+b.y+"PointerWidth="+pointerx+" PointH="+pointery);
		 

		 Color color = new Color(0,0,0);
		 int arrayofrgb = color.getRGB();
		 int[] rgbarray = new int[10];
		 
		 for(int r = 0; r<10; r++)
		 {
		
			 rgbarray[r] = arrayofrgb;
		 }
		 
		 
		 if( pointery > 0 && pointerx > 0 )
		 {
		 newImage2.setRGB(pointerx, pointery, 10, 10, rgbarray, 0, 0);
		 }

		 
		 jpanel.add( new JLabel( new ImageIcon(newImage2)));
		 jpanel.add( new JLabel(""+runtimes));
		 jframe.add(jpanel);
		 jframe.setVisible(true);
		 jframe.setSize(400,400);
		 
	}
	
	
}



class ImageImplement extends JPanel {

	  private Image img;


	  public ImageImplement(Image img) {
	    this.img = img;
	    Dimension size = new Dimension(img.getWidth(null), img.getHeight(null));
	    setPreferredSize(size);
	    setMinimumSize(size);
	    setMaximumSize(size);
	    setSize(size);
	    setLayout(null);
	  }

	  public void paintComponent(Graphics g) {
	    g.drawImage(img, 0, 0, null);
	  }

	}